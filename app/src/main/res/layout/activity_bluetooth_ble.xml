<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_bluelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Bluetooth List:"
            android:textColor="#000"
            android:textSize="15dp"
            />
        <ListView
            android:id="@+id/lv_bluelist"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:paddingTop="1dp"
            android:layout_marginTop="5dp">
        </ListView>

        <TableLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                >
                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="发送信息" />

                <Button
                    android:id="@+id/btn_disconnect"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="断开连接" />

                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="扫描蓝牙" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                >
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除状态" />

                <Button
                    android:id="@+id/btn_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开蓝牙" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭蓝牙" />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信息状态显示:"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />

        <!--<TextView-->
            <!--android:id="@+id/tv_recv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textColor="#000"-->
            <!--/>-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">
            <TableRow>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="故障状态:"
                    android:textColor="#000"
                    android:textSize="15dp"

                    />
                <EditText
                    android:id="@+id/editTextErrorSate"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="正常"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:editable="false"
                    android:inputType="none"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="运行状态:"
                    android:textColor="#000"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/editTextErrorPosition"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="无接入设备"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:editable="false"
                    android:inputType="none"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="电压信息:"
                    android:textColor="#000"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/editTextVoltate"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="00.00V"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:inputType="none"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电流信息:"
                    android:textColor="#000"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/editTextCurrent"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="0.000A"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:editable="false"
                    android:inputType="none"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="温度信息:"
                    android:textColor="#000"
                    android:textSize="15dp"
                    />
                <EditText
                    android:id="@+id/editTextTemp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="0.000度"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:editable="false"
                    android:inputType="none"
                    />
            </TableRow>
        </TableLayout>

